<%= render 'shared/navbar' %>

<div class="wrapper">
  <% @friends.each do |friend| %>
      <div class="friend-card">
        <div class="top">
          <% if friend.photo.attached? %>
          <%= cl_image_tag friend.photo.key, height: 250, width: 200, crop: :fill, class: 'pic' %>
          <% else %>
          <%= %>
          <% end %>
          <div class="text">
            <h3><%= friend.first_name %></h3>
            <h3><%= friend.last_name %></h3>
            <p><%= friend.age %> years old</p>
            <p><%= friend.city %></p>
            <div class="tags">
              <p>#juggler #actor</p>
            </div>
          </div>
        </div>
      <div class="bottom">
        <div class="rating-price">
          <h2><%= friend.price %> $/h</h2>
          <p>ðŸŸ  ðŸŸ  ðŸŸ </p>
        </div>
        <div class="btns">
          <%= link_to "View profile !", friend_path(friend), class: "btn-blue" %>
        </div>
      </div>
    </div>
  <% end  %>
</div>

<%= render 'shared/footer' %>

