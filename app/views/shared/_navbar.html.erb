<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
        <div class="logo">
          <%= link_to ('<i class="fa fa-user-friends"></i>').html_safe, root_path  %>
          <h4 id='text'>Rent a Friend</h4>
        </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

   <% if current_user %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <div class="menu">
              <li class="nav-item active">
              <%= link_to "Find a friend", friends_path %>
              <li class="nav-item active">
              <%= link_to "Add a friend", new_friend_path %>
            </div>
            <li class="nav-item dropdown">
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item"><%= link_to "Dashboard", dashboard_path %></a>
                <a class="dropdown-item"><%= link_to "Log out", destroy_user_session_path(@user), method: :delete, data: { confirm: "You are logged out" } %></a>
              </div>
            </li>
          </ul>
    <% else %>
       <div class="menu">
               <li class="nav-item active">
              <%= link_to "Find a friend", friends_path %>
              </li>
              <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path %>
              <li class="nav-item">
              <%= link_to "Log in", new_user_session_path %>
              </li>
            </div>
     <% end %>
    </div>
  </div>
